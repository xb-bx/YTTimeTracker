{
  "manifest_version": 3,
  "name": "DEBUG Youtube Watch Statistics Tracker",
  "description": "Track what videos, how long, from what channels and in what language you watch",
  "version": "1.5",
  "license": "GPL-2.0",
  "host_permissions": [
    "*://*/"
  ],
  "permissions": [
    "storage",
    "tabs",
    "downloads"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "ContentScript.js"
      ]
    }
  ],
  "background": {
    "service_worker": "Background.js"
  },
  "action": {
    "default_title": "Youtube Watch Tracker",
    "default_popup": "index.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "DEBUG yttimetracker.nazarnik050406@gmail.com"
    }
  }
}
